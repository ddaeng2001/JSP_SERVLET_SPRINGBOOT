<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>03_FILTER</display-name>
  <welcome-file-list> <!-- 서블릿에 직접적인 접근 불가능 -->
  	<welcome-file>index.do</welcome-file>
  	<!--  <welcome-file>/WEB-INF/index.jsp</welcome-file>--> 
  	<!-- index.do를 입력하지 않고 web project 경로만 입력해도 연결됨
  		 원래는 localhost:8090/03_FILTER/index.do까지 입력해야하나 web.xml 생성과 위의 코드 삽입으로
  		 엔드포인트인 index.do를 생략해도 접속이 가능함  -->
  		 
    <welcome-file>index.html</welcome-file> 
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>
  
  <!-- 서블릿 등록  -->
  <servlet>
  	<servlet-name>Home</servlet-name>
  	<servlet-class>Servlet.Home</servlet-class> <!-- 서블릿 실제 경로  -->
  </servlet>
 <servlet-mapping>
 	<servlet-name>Home</servlet-name>
 	<url-pattern>/index.do</url-pattern>
 </servlet-mapping>
 
 
  <!--  필터 등록 -->
  
    <filter>
  	<filter-name>UTF8_EncodingFilter</filter-name>
  	<filter-class>Filter.UTF8_EncodingFilter</filter-class>
  						<!--★이름 == 파일명★-->
  </filter>
  <filter-mapping>
  	<filter-name>UTF8_EncodingFilter</filter-name>
  	<url-pattern>*.do</url-pattern>
  				<!--  *.do : 확장자를 do로 받는 모든 경로 -->
  </filter-mapping>
  
  
  <!-- 순서는 filter 위치를 바꾸면 바뀜!  -->
  <!-- Filter_1 -->
  <filter>
  	<filter-name>HomeFilter_1</filter-name>
  	<filter-class>Filter.HomeFilter_1</filter-class>
  						<!--★이름 == 파일명★-->
  </filter>
  <filter-mapping>
  	<filter-name>HomeFilter_1</filter-name>
  	<url-pattern>/index.do</url-pattern>
  </filter-mapping>
  
  
  
    
  <!-- Filter_2 -->
  <filter>
  	<filter-name>HomeFilter_2</filter-name>
  	<filter-class>Filter.HomeFilter_2</filter-class>
  						<!--★이름 == 파일명★-->
  </filter>
  <filter-mapping>
  	<filter-name>HomeFilter_2</filter-name>
  	<url-pattern>/index.do</url-pattern>
  </filter-mapping>
  

  
  
  
</web-app>